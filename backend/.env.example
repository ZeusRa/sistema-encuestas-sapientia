# Credenciales de Base de Datos (EJEMPLO - NO USAR EN PRODUCCIÓN)
BD_USUARIO=<usuario_postgresql>
BD_CLAVE=<contraseña_segura_min_16_caracteres>
BD_SERVIDOR=<host_bd_ejemplo_localhost_o_ip>
BD_PUERTO=5432
BD_NOMBRE=<nombre_base_datos>

# URL de Conexión Completa (PRIORITARIA - si está presente, sobrescribe las anteriores)
DATABASE_URL=postgresql://<usuario>:<password>@<host>:<puerto>/<database>?sslmode=require

# Configuración de Seguridad
# CRÍTICO: Genera una clave fuerte con: openssl rand -hex 32
# NUNCA uses 'clave_secreta' en producción
CLAVE_SECRETA=<GENERAR_CON_OPENSSL_RAND_HEX_32>

# API Externa Sapientia
API_KEY_SAPIENTIA=<clave_compartida_con_sistema_sapientia>

# CORS - Orígenes permitidos (separar con comas, SIN espacios)
# Ejemplo desarrollo: http://localhost:5173,http://localhost:3000
# Ejemplo producción: https://encuestas.tudominio.com,https://admin.tudominio.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Performance - Tamaños de batch para procesamiento masivo
BATCH_SIZE_JIT=1000
BATCH_SIZE_PUBLICACION=1000

# Redis (Opcional - para caché)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO
